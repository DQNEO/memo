#!/bin/bash
# OSX用のPHP configureスクリプト

export ARCHFLAGS="-arch x86_64"
prefix="/opt/php"
./configure --prefix=$prefix \
            --enable-debug \
            --enable-pdo \
            --enable-cli \
            --enable-phar \
            --enable-phpdbg  \
            --with-curl \
            --enable-json \
            --enable-xml \
            --enable-pcntl \
            --with-libxml-dir=$(brew --prefix libxml2) \
            --disable-cgi

exit

cat >/dev/null <<EOF

            --enable-zip \
            --enable-exif \
            --enable-fileinfo \
            --enable-opcache \
            --enable-session \
            --enable-phar \
            --with-gd \
            --with-zlib  \
            --without-apxs2 \

#            --with-mysqli=mysqlnd \
# --with-pdo-mysql=mysqlnd \
#            --with-libxml-dir=/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr \   #         --enable-fpm \
#            --with-libxml-dir=$(brew --prefix libxml2) \
#            --with-openssl=/usr/local/Cellar/openssl/1.0.2g \
#            --enable-fpm \

EOF
